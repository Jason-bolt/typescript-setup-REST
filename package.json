{
  "name": "typescriptbackendsetup",
  "version": "1.0.0",
  "description": "Typescript setup for REST",
  "main": "index.ts",
  "scripts": {
    "dev": "webpack --watch --mode development",
    "build": "webpack --mode production",
    "migrate": "db-migrate --migrations-dir ./src/config/database/migrations",
    "migrate:up": "npm run migrate up",
    "migrate:down": "npm run migrate down",
    "migrate:reset": "npm run migrate reset",
    "migrate:create": "npm run migrate create",
    "seed:create": "npm run migrate create:seeds",
    "seed:up": "npm run migrate up:seeds",
    "seed:down": "npm run migrate down:seeds",
    "seed:reset": "npm run migrate reset:seeds",
    "db:reset": "npm run seed:reset && npm run migrate:reset && npm run migrate:up && npm run seed:up",
    "lint": "eslint . --ext .ts,.js",
    "format": "prettier --write \"src/**/*.{js,ts,json,md}\"",
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text --reporter=text-summary mocha -r ts-node/register src/**/*.test.ts --exclude src/config/**/*.ts --timeout 15000 --exit"
  },
  "pre-commit": [
    "format",
    "lint"
  ],
  "keywords": [
    "Typescript",
    "API",
    "Setup",
    "REST"
  ],
  "author": "Jason Kwame Appiatu",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bluebird": "^3.5.42",
    "@types/chai": "^4.3.16",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.5.0",
    "@types/helmet": "^4.0.0",
    "@types/http-status-codes": "^1.2.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mocha": "^10.0.7",
    "@types/pg": "^8.11.6",
    "@types/pg-promise": "^5.4.3",
    "@types/redis": "^4.0.11",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "chai": "^4.0.0",
    "chai-http": "^4.4.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "dotenv-webpack": "^8.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.8.0",
    "mocha": "^10.6.0",
    "node-polyfill-webpack-plugin": "^4.0.0",
    "nodemon-webpack-plugin": "^4.8.2",
    "nyc": "^17.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.3.3",
    "sinon": "^18.0.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.1",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bluebird": "^3.7.2",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "express": "^4.19.2",
    "express-fileupload": "^1.5.1",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    "pg-monitor": "^2.1.0",
    "redis": "^4.6.15",
    "tracer": "^1.3.0",
    "zod": "^3.23.8"
  }
}
